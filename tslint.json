{
    "extends": ["tslint:latest"],
    "rules": {
        "arrow-parens": [true,
            "ban-single-arg-parens"    
        ],
        "interface-name": [false],
        "no-angle-bracket-type-assertion": false,
        "no-unused-expression": [true, "allow-fast-null-checks"],
        "one-line": [true,
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark": [true,
            "single",
            "jsx-double"
        ],
        "variable-name": [true,
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "whitespace": [true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-type",
            "check-preblock"
        ]
    }
}